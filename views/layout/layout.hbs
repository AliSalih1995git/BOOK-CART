<script>
			
			$(function(){

				// First: Add with default messages
				//$("#frm-add-data").validate();				

				// Second: Change default messages
				$("#forms").validate({
                    errorClass: "my-error-class",
                    validClass: "my-valid-class",

                	rules: { // to define rules
                		name: "required",
                		
                		pw: {
                			required: true,
            				minlength: 4,
                		},
                        repw: {
                			required: true,
            				minlength: 4
                		},
                        email: {
                        required: true,
                        email: true
                     },
                     
                         phone:{
                             required: true,
            				maxlength:10

                         }
                     
                        
                	},
                    messages:{ // to define custom messages
                    	name: "Enter your name",
                    	
                    	pw: {
				            required: "Enter password",
				            minlength: "Enter minimum 4 digits"
				        },
                        repw: {
				            required: "Confirm password",
				            minlength: "Enter minimum 4 digits"
				        },
                        email: {
                            required:'Enter Email',
          email: "The email should be in the format: abc@domain.tld"
        },
               phone:{
                   required:"Enter mobile number",
                   maxlength: "Enter maximum 10 digits"

               }
                    },
                    submitHandler: function(form) {  
                           if ($(form).valid()) 
                               form.submit(); 
                           return false; // prevent normal form posting
                    }
                });
			});
		</script>



