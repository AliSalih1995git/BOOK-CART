	<script>
        function removeProductforwishlist(cartId) {
          $.ajax({
            url: "/deletewishlist",
            data: {
              cart: cartId,
            },
            method: "post",
            success: (Response) => {
              if (Response) {
                alert('product removed from wishlist')
                location.reload()
              }
            }
          })
        }
