    <script>
        function removeProductforwishlist(cartId) {
          $.ajax({
            url: "/deletewishlist",
            data: {
              cart: cartId,
            },
            method: "post",
            success: (Response) => {
              if (Response) {
                  Swal.fire(
                    'Remove from Wishlist!',
                    'product added to Cart.',
                    'success'
                )
                location.reload()
              }
            }
          })
        }
